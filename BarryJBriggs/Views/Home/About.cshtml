<!-- Custom scripts or custom footer content for page here -->
@section Scripts {
    <!--
        This is being used in more than one page, would be better to add this to a js file or
        cshtml partial and copy the script/cshtml to these @@section Scripts
    -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const fadeElements = document.querySelectorAll(".fade-up");

            const observer = new IntersectionObserver(
                (entries, observer) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add("visible");
                            observer.unobserve(entry.target);
                        }
                    });
                },
                { threshold: 0.1 }
            );

            fadeElements.forEach(el => observer.observe(el));
        });
    </script>
}